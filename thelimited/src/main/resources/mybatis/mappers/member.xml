<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">

	<resultMap id="memberResult" type="MemberVO">
		<result property="member_id" column="member_id" />
		<result property="member_name" column="member_name" />
		<result property="member_pw" column="member_pw" />
		<result property="hp1" column="hp1" />
		<result property="zipcode" column="zipcode" />
		<result property="member_address" column="member_address" />
		<result property="subaddress" column="subaddress" />
		<result property="tl_point" column="tl_point" />
		<result property="joinDate" column="joinDate" />
		<result property="del_yn" column="del_yn" />
	</resultMap>

	<!-- 로그인 -->
	<select id="login" resultType="memberVO" parameterType="java.util.Map">
	    <![CDATA[
			select * from t_shopping_member 
			 where member_id=#{member_id}
			 and member_pw=#{member_pw}			
		]]>
	</select>
	
	
	<!-- 회원가입 -->
	<insert id="insertNewMember" parameterType="memberVO">
	  <![CDATA[
	    	insert into t_shopping_member(member_id,
					 					 member_pw,
	                                     member_name,
	                                     hp1)
								 values(#{member_id},
										#{member_pw},
										#{member_name},
	                                    #{hp1})
	   ]]>
	</insert>
	
	
	
</mapper>